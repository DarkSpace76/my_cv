{
  "database": {
    "rules": "database.json"
  },
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5500
    },
    "ui": {
      "enabled": true,
      "port": 5501
    },
    "singleProjectMode": true
  }
}